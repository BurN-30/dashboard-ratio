# ============================================
# DASHBOARD V2 - Configuration
# ============================================
# Copiez ce fichier en .env et remplissez les valeurs

# --- DATABASE ---
DATABASE_URL=postgresql://dashboard:password@db:5432/dashboard
# Pour SQLite local (dev): sqlite:///./dashboard.db

# --- SECURITY ---
JWT_SECRET=change-this-to-a-very-long-random-string-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# Mot de passe admin dashboard
ADMIN_PASSWORD=votre_mot_de_passe_securise

# --- TRACKERS CREDENTIALS ---
# Sharewood
SW_USER=
SW_PASS=
SW_USERNAME=  # Nom d'utilisateur pour l'URL du profil

# Generation-Free
GF_USER=
GF_PASS=
GF_USERNAME=

# TheOldSchool
TOS_USER=
TOS_PASS=
TOS_USERNAME=

# Torr9
TORR9_USER=
TORR9_PASS=
TORR9_USERNAME=

# Gemini Tracker
GEMINI_USER=
GEMINI_PASS=
GEMINI_USERNAME=

# --- HARDWARE AGENT ---
# Token pour authentifier l'agent hardware
HW_AGENT_TOKEN=generate-a-secure-token-here

# --- SCRAPER ---
# Intervalle entre les scrapes automatiques (en secondes)
SCRAPE_INTERVAL=3600

# --- DOCKER / TRAEFIK ---
DOMAIN=dashboard.example.com
ACME_EMAIL=your-email@example.com

# --- POSTGRES (Docker) ---
POSTGRES_USER=dashboard
POSTGRES_PASSWORD=password
POSTGRES_DB=dashboard
